<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="label" format="string" />
    <attr name="hint" format="string" />
    <attr name="hintColor" format="color" />
    <attr name="editable" format="boolean" />
    <attr name="withoutError" format="boolean" />

    <declare-styleable name="InputState">
        <attr name="state_error" format="boolean" />
        <attr name="state_has_text" format="boolean" />
        <attr name="disabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TDInputField">
        <attr name="label" />
        <attr name="hint" />
        <attr name="hintColor" />
        <attr name="textColor" format="color" />
        <attr name="passwordToggleDrawable" format="reference" />
        <attr name="android:imeOptions" />
        <attr name="android:inputType" />
        <attr name="maxLength" format="integer" />
        <attr name="editable" />
        <attr name="withoutError" />
    </declare-styleable>
